extends layout

block content
  .w-100.center
    .cf
      .fl.w-50.w-30-ns.pr5
        each tweet in tweets
          article.post
            .author
              a(href=tweet.source)
                img(src=tweet.author)
            p.f6.f5-l.mt0.link
              a(href=tweet.url) !{tweet.text}
                
            //- a.preview(href=previews.url)
